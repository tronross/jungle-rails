<section class="user-new">
  <header class="page-header">
    <h1>New User</h1>
  </header>
  <h2>Welcome!</h2>
  <h3>Create Your Account Below:</h3> 
  <div class="form-group">

    <% if flash[:alert] %>
    <section class= "alert alert-danger" role="alert"><%= flash[:alert] %></section>
  <% end %>
  
    <%= form_for :user, url: "/users" do |f| %>

        <div class="mb-1">
          Name: <%= f.text_field :name, class: "f-field" %>
        </div>
        <div class="mb-1">
          Email: <%= f.text_field :email, class: "f-field" %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="mb-1">
          Password: <%= f.password_field :password, class: "f-field" %>
          <small id="passwordHelp" class="form-text text-muted">Please use at least 8 characters.</small>
        </div>
        <div class="mb-1">
          Password Confirmation: <%= f.password_field :password_confirmation, class: "f-field" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>

    <% end %>
</section>
